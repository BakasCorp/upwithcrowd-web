  "scripts": {
    "dev": "node get-resources.js && prettier --write \"language/resources.ts\" && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix --quiet",
    "lint:report": "next lint --quiet  > lint-output.txt 2>&1",
