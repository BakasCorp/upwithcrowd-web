{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [{"name": "next"}],
    "baseUrl": ".",
    "target": "ES6",
    "paths": {
      "@/*": ["../../packages/ayasofyazilim-ui/@/*", "./*"],
      "@tiptap-location/*": ["../../packages/ayasofyazilim-ui/tiptap/*"],
      "@public/*": ["./public/*"]
    }
  },
  "include": [
    "next.config.js",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".eslintrc.js",
    ".lintstagedrc.js"
  ],
  "exclude": ["node_modules"]
}
